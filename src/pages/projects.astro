---
import ProjectCard from "../components/projects/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Proyectos">
    <section class="max-w-7xl mx-auto py-16 px-5 lg:px-0 text-white">
        <!-- TÃ­tulo -->
        <h3
            class="text-xl md:text-3xl font-bold uppercase text-center mb-12"
            data-aos="fade-up"
            data-aos-duration="800"
        >
            Nuestros proyectos realizados
        </h3>

        <!-- Grid de proyectos -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div data-aos="fade-up" data-aos-duration="800" data-aos-delay="0">
                <ProjectCard />
            </div>

            <div
                data-aos="fade-up"
                data-aos-duration="800"
                data-aos-delay="150"
            >
                <ProjectCard />
            </div>

            <div
                data-aos="fade-up"
                data-aos-duration="800"
                data-aos-delay="300"
            >
                <ProjectCard />
            </div>
        </div>
    </section>
</Layout>

