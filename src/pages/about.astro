---
import { objetivos, valores } from "../data/about";
import Layout from "../layouts/Layout.astro";
import bannerMovil from "../assets/banner-about-movil.png";
import bannerDesktop from "../assets/banner-about-desktop.png";
import misionImg from "../assets/mision.jpg";
import visionImg from "../assets/vision.avif";
import objetivosImg from "../assets/objetivos.avif";
import { Picture } from "astro:assets";
---

<Layout title="Nosotros">
    <div class="overflow-x-hidden">
        <!-- HERO -->
        <section class="relative w-full overflow-x-hidden py-10">
            <Picture
                src={bannerMovil}
                alt="Sobre TriCode Studio"
                formats={["avif", "webp"]}
                class="absolute inset-0 w-full h-full object-cover object-center md:hidden"
            />

            <Picture
                src={bannerDesktop}
                alt="Sobre TriCode Studio"
                formats={["avif", "webp"]}
                class="absolute inset-0 w-full h-full object-cover hidden md:block"
            />

            <!-- Overlay mejorado -->
            <div
                class="absolute inset-0 bg-linear-to-br from-black/85 via-black/65 to-blue-900/45"
            >
            </div>
            <div class="absolute inset-0 backdrop-blur-[2px]"></div>

            <!-- Efecto de grid sutil -->
            <div
                class="absolute inset-0 opacity-10"
                style="background-image: linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px); background-size: 50px 50px;"
            >
            </div>

            <div
                class="relative z-10 h-full flex flex-col items-center justify-center text-center px-4 sm:px-6 lg:px-8"
            >
                <span
                    class="text-xs tracking-[0.35em] uppercase text-blue-400 mb-5 font-medium"
                >
                    TriCode Studio
                </span>

                <h1
                    class="text-white text-3xl md:text-5xl lg:text-6xl font-extrabold tracking-tight"
                >
                    Creamos software
                    <span class="block text-blue-400 mt-2">
                        que impulsa negocios
                    </span>
                </h1>

                <p
                    class="mt-6 max-w-2xl text-white/80 text-base md:text-lg leading-relaxed"
                >
                    Ingeniería, diseño y visión estratégica para construir
                    soluciones digitales modernas, seguras y escalables.
                </p>

                <div
                    class="mt-10 h-px w-24 bg-linear-to-r from-transparent via-blue-400/60 to-transparent"
                >
                </div>
            </div>
        </section>

        <!-- CONTENIDO -->
        <section
            class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 space-y-32 text-white"
        >
            <!-- QUIÉNES SOMOS -->
            <section class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
                <div
                    class="relative p-3"
                    data-aos="fade-right"
                    data-aos-duration="800"
                >
                    <h2
                        class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight "
                    >
                        Quiénes
                        <span class="md:block text-blue-500 mt-1">somos</span>
                    </h2>

                    <span
                        class="absolute -left-6 top-2 h-16 w-1 bg-linear-to-b from-blue-500 to-blue-500/20 rounded"
                    ></span>
                </div>

                <div
                    class="lg:col-span-2 space-y-6 text-muted-foreground text-base leading-relaxed p-3"
                    data-aos="fade-left"
                    data-aos-duration="800"
                    data-aos-delay="200"
                >
                    <p
                        class="text-white/70 hover:text-white/90 transition-colors duration-300"
                    >
                        DevStack Studio es una agencia de desarrollo de software
                        especializada en crear soluciones digitales a medida
                        para empresas que buscan eficiencia, innovación y
                        crecimiento sostenido.
                    </p>

                    <p
                        class="text-white/70 hover:text-white/90 transition-colors duration-300"
                    >
                        Integramos ingeniería sólida, diseño funcional y visión
                        de negocio para construir plataformas modernas, seguras
                        y listas para escalar a largo plazo.
                    </p>
                </div>
            </section>

            <!-- MISIÓN / VISIÓN -->
            <section class="grid grid-cols-1 md:grid-cols-2 gap-10">
                <!-- MISIÓN -->
                <div
                    class="group rounded-3xl border border-white/10 bg-white/5 backdrop-blur hover:bg-white/10 hover:border-blue-500/30 transition-all duration-500 hover:shadow-xl hover:shadow-blue-500/10 overflow-hidden"
                    data-aos="fade-up"
                    data-aos-duration="800"
                >
                    <div class="relative h-48 overflow-hidden">
                        <Picture
                            src={misionImg}
                            alt="Misión TriCode Studio"
                            formats={["avif", "webp"]}
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                        />
                        <div
                            class="absolute inset-0 bg-linear-to-t from-black/80 via-black/40 to-transparent"
                        >
                        </div>
                    </div>

                    <div class="p-10">
                        <span
                            class="text-blue-400 text-sm uppercase tracking-widest font-semibold"
                        >
                            Misión
                        </span>

                        <h3
                            class="mt-4 text-xl font-semibold text-white group-hover:text-blue-400 transition-colors duration-300"
                        >
                            Transformar desafíos en soluciones
                        </h3>

                        <p class="mt-4 text-muted-foreground leading-relaxed">
                            Convertir los retos de nuestros clientes en
                            soluciones digitales eficientes, escalables y
                            alineadas con sus objetivos estratégicos, aplicando
                            tecnologías modernas y buenas prácticas de
                            ingeniería.
                        </p>

                        <div
                            class="mt-6 h-1 w-0 group-hover:w-full bg-linear-to-r from-blue-500 to-blue-400 transition-all duration-700 rounded"
                        >
                        </div>
                    </div>
                </div>

                <!-- VISIÓN -->
                <div
                    class="group rounded-3xl border border-white/10 bg-white/5 backdrop-blur hover:bg-white/10 hover:border-blue-500/30 transition-all duration-500 hover:shadow-xl hover:shadow-blue-500/10 overflow-hidden"
                    data-aos="fade-up"
                    data-aos-duration="800"
                    data-aos-delay="200"
                >
                    <div class="relative h-48 overflow-hidden">
                        <Picture
                            src={visionImg}
                            alt="Visión TriCode Studio"
                            formats={["avif", "webp"]}
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                        />
                        <div
                            class="absolute inset-0 bg-linear-to-t from-black/80 via-black/40 to-transparent"
                        >
                        </div>
                    </div>

                    <div class="p-10">
                        <span
                            class="text-blue-400 text-sm uppercase tracking-widest font-semibold"
                        >
                            Visión
                        </span>

                        <h3
                            class="mt-4 text-xl font-semibold text-white group-hover:text-blue-400 transition-colors duration-300"
                        >
                            Ser un referente en desarrollo de software
                        </h3>

                        <p class="mt-4 text-muted-foreground leading-relaxed">
                            Acompañar a empresas en su transformación digital
                            con soluciones confiables, sólidas y duraderas de
                            alto impacto.
                        </p>

                        <div
                            class="mt-6 h-1 w-0 group-hover:w-full bg-linear-to-r from-blue-500 to-blue-400 transition-all duration-700 rounded"
                        >
                        </div>
                    </div>
                </div>
            </section>

            <!-- OBJETIVOS -->
            <section class="space-y-12">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
                    <div data-aos="fade-right" data-aos-duration="800">
                        <h2
                            class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-8"
                        >
                            Objetivos estratégicos
                        </h2>

                        <div class="relative rounded-2xl overflow-hidden group">
                            <Picture
                                src={objetivosImg}
                                alt="Objetivos estratégicos"
                                formats={["avif", "webp"]}
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                            />
                            <div
                                class="absolute inset-0 bg-linear-to-t from-black/60 via-transparent to-transparent"
                            >
                            </div>
                        </div>
                    </div>

                    <ol
                        class="relative border-l border-blue-500/30 space-y-14 pl-10"
                        data-aos="fade-left"
                        data-aos-duration="800"
                        data-aos-delay="200"
                    >
                        {
                            objetivos.map((item, index) => (
                                <li
                                    class="flex items-center gap-10 group"
                                    data-aos="fade-up"
                                    data-aos-duration="800"
                                    data-aos-delay={index * 100}
                                >
                                    <p class="w-10 h-10 rounded-full bg-blue-500/10 border-2 border-blue-500 flex items-center justify-center text-blue-400 font-mono text-sm font-bold group-hover:bg-blue-500 group-hover:text-white group-hover:scale-110 transition-all duration-300">
                                        {String(index + 1).padStart(2, "0")}
                                    </p>

                                    <div class="flex-1 group-hover:translate-x-2 transition-transform duration-300">
                                        <h4 class="text-lg font-semibold mb-2 text-white group-hover:text-blue-400 transition-colors duration-300">
                                            {item.title}
                                        </h4>

                                        <p class="text-muted-foreground leading-relaxed">
                                            {item.text}
                                        </p>
                                    </div>
                                </li>
                            ))
                        }
                    </ol>
                </div>
            </section>

            <!-- VALORES -->
            <section class="space-y-12">
                <h2
                    class="text-3xl sm:text-4xl lg:text-5xl font-bold"
                    data-aos="fade-up"
                    data-aos-duration="800"
                >
                    Nuestros valores
                </h2>

                <div
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8"
                >
                    {
                        valores.map((item, index) => (
                            <div
                                class="group p-8 rounded-2xl border border-white/10 bg-white/5 hover:bg-white/10 hover:border-blue-500/30 transition-all duration-500 hover:shadow-lg hover:shadow-blue-500/10 hover:-translate-y-1"
                                data-aos="fade-up"
                                data-aos-duration="800"
                                data-aos-delay={index * 100}
                            >
                                <span class="block h-1 w-12 bg-blue-500 rounded mb-6 group-hover:w-20 transition-all duration-500" />

                                <h4 class="text-lg font-semibold mb-3 text-white group-hover:text-blue-400 transition-colors duration-300">
                                    {item.title}
                                </h4>

                                <p class="text-muted-foreground leading-relaxed">
                                    {item.text}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </section>
        </section>
    </div>
</Layout>
