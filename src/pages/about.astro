---
import { objetivos, valores } from "../data/about";
import Layout from "../layouts/Layout.astro";
import bannerMovil from "../assets/banner-about-movil.png";
import bannerDesktop from "../assets/banner-about-desktop.png";
import { Picture } from "astro:assets";
---

<Layout title="Nosotros">
    <!-- HERO -->
    <section class="relative w-full h-[70vh] min-h-105 overflow-hidden">
        <Picture
            src={bannerMovil}
            alt="Sobre TriCode Studio"
            formats={["avif", "webp"]}
            class="absolute inset-0 w-full h-full object-cover md:hidden"
        />

        <Picture
            src={bannerDesktop}
            alt="Sobre TriCode Studio"
            formats={["avif", "webp"]}
            class="absolute inset-0 w-full h-full object-cover hidden md:block"
        />

        <!-- Overlay -->
        <div
            class="absolute inset-0 bg-gradient-to-br from-black/80 via-black/60 to-blue-900/40"
        >
        </div>
        <div class="absolute inset-0 backdrop-blur-[2px]"></div>

        <div
            class="relative z-10 h-full flex flex-col items-center justify-center text-center px-6"
        >
            <span
                class="text-xs tracking-[0.35em] uppercase text-blue-400 mb-5"
            >
                TriCode Studio
            </span>

            <h1
                class="text-white text-3xl md:text-5xl font-extrabold tracking-tight"
            >
                Creamos software
                <span class="block text-blue-400"> que impulsa negocios </span>
            </h1>

            <p class="mt-6 max-w-xl text-white/80 text-base md:text-lg">
                Ingeniería, diseño y visión estratégica para construir
                soluciones digitales modernas, seguras y escalables.
            </p>

            <div class="mt-10 h-px w-24 bg-blue-400/60"></div>
        </div>
    </section>

    <!-- CONTENIDO -->
    <section class="max-w-7xl mx-auto px-6 py-24 space-y-32">
        <!-- QUIÉNES SOMOS -->
        <section class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
            <div class="relative">
                <h2 class="text-3xl sm:text-4xl font-bold">
                    Quiénes
                    <span class="block text-blue-500">somos</span>
                </h2>

                <span
                    class="absolute -left-6 top-2 h-16 w-1 bg-blue-500/60 rounded"
                ></span>
            </div>

            <div
                class="lg:col-span-2 space-y-6 text-muted-foreground text-lg leading-relaxed"
            >
                <p>
                    TriCode Studio es una agencia de desarrollo de software
                    especializada en crear soluciones digitales a medida para
                    empresas que buscan eficiencia, innovación y crecimiento
                    sostenido.
                </p>

                <p>
                    Integramos ingeniería sólida, diseño funcional y visión de
                    negocio para construir plataformas modernas, seguras y
                    listas para escalar a largo plazo.
                </p>
            </div>
        </section>

        <!-- MISIÓN / VISIÓN -->
        <section class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <div
                class="group p-10 rounded-3xl border border-white/10 bg-white/5 backdrop-blur hover:bg-white/10 transition"
            >
                <span class="text-blue-400 text-sm uppercase tracking-widest">
                    Misión
                </span>

                <h3 class="mt-4 text-xl font-semibold">
                    Transformar desafíos en soluciones
                </h3>

                <p class="mt-4 text-muted-foreground leading-relaxed">
                    Convertir los retos de nuestros clientes en soluciones
                    digitales eficientes, escalables y alineadas con sus
                    objetivos estratégicos, aplicando tecnologías modernas y
                    buenas prácticas de ingeniería.
                </p>
            </div>

            <div
                class="group p-10 rounded-3xl border border-white/10 bg-white/5 backdrop-blur hover:bg-white/10 transition"
            >
                <span class="text-blue-400 text-sm uppercase tracking-widest">
                    Visión
                </span>

                <h3 class="mt-4 text-xl font-semibold">
                    Ser un referente en desarrollo de software
                </h3>

                <p class="mt-4 text-muted-foreground leading-relaxed">
                    Acompañar a empresas en su transformación digital con
                    soluciones confiables, sólidas y duraderas de alto impacto.
                </p>
            </div>
        </section>

        <!-- OBJETIVOS -->
        <section class="space-y-12">
            <h2 class="text-3xl sm:text-4xl font-bold">
                Objetivos estratégicos
            </h2>

            <ol
                class="relative border-l border-blue-500/30 space-y-14 pl-10 max-w-3xl"
            >
                {
                    objetivos.map((item, index) => (
                        <li class="relative">
                            <span class="absolute -left-[22px] top-1 w-10 h-10 rounded-full bg-blue-500/10 border border-blue-500 flex items-center justify-center text-blue-400 font-mono">
                                {String(index + 1).padStart(2, "0")}
                            </span>

                            <h4 class="text-lg font-semibold mb-2">
                                {item.title}
                            </h4>

                            <p class="text-muted-foreground leading-relaxed">
                                {item.text}
                            </p>
                        </li>
                    ))
                }
            </ol>
        </section>

        <!-- VALORES -->
        <section class="space-y-12">
            <h2 class="text-3xl sm:text-4xl font-bold">Nuestros valores</h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    valores.map((item) => (
                        <div class="p-8 rounded-2xl border border-white/10 bg-white/5 hover:bg-white/10 transition">
                            <span class="block h-1 w-12 bg-blue-500 rounded mb-6" />

                            <h4 class="text-lg font-semibold mb-3">
                                {item.title}
                            </h4>

                            <p class="text-muted-foreground leading-relaxed">
                                {item.text}
                            </p>
                        </div>
                    ))
                }
            </div>
        </section>
    </section>
</Layout>
