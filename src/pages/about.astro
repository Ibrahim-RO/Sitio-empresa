---
import { objetivos, valores } from "../data/about";
import Layout from "../layouts/Layout.astro";
import bannerMovil from "../assets/banner-about-movil.png";
import bannerDesktop from "../assets/banner-about-desktop.png";
import { Picture } from "astro:assets";
---

<Layout title="Nosotros">
    <!-- HERO -->
    <section class="relative w-full h-64 md:h-80 lg:h-105 overflow-hidden">
        <!-- Imagen móvil -->
        <Picture
            src={bannerMovil}
            alt="Sobre TriCode Studio"
            formats={["avif", "webp"]}
            class="w-full h-full md:hidden object-cover"
        />

        <!-- Imagen desktop -->
        <Picture
            src={bannerDesktop}
            alt="Sobre TriCode Studio"
            formats={["avif", "webp"]}
            class="w-full h-full hidden md:block object-cover"
        />

        <!-- Overlay -->
        <div
            class="absolute inset-0 bg-linear-to-t from-black/70 via-black/30 to-black/40"
        >
        </div>

        <!-- Texto -->
        <div
            class="absolute inset-0 flex flex-col items-center justify-center text-center px-6"
        >
            <span class="text-xs tracking-widest uppercase text-blue-400 mb-3">
                Nuestra esencia
            </span>

            <h1
                class="text-white text-2xl md:text-4xl font-extrabold tracking-tight"
            >
                ¿Quiénes somos?
            </h1>

            <div class="mt-4 h-px w-16 bg-blue-500/60"></div>
        </div>
    </section>

    <!-- CONTENT -->
    <section class="max-w-7xl mx-auto px-6 py-24 space-y-28">
        <!-- IDENTIDAD -->
        <section class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
            <h2 class="text-2xl sm:text-3xl font-bold text-center lg:text-left">
                Quiénes somos
            </h2>

            <div
                class="lg:col-span-2 space-y-6 text-muted-foreground text-base sm:text-lg leading-relaxed"
            >
                <p>
                    TriCode Studio es una agencia de desarrollo de software
                    especializada en crear soluciones digitales a medida para
                    empresas que buscan eficiencia, innovación y crecimiento
                    sostenido.
                </p>

                <p>
                    Integramos ingeniería, diseño y visión de negocio para
                    construir plataformas modernas, seguras y listas para
                    escalar a largo plazo.
                </p>
            </div>
        </section>

        <!-- MISIÓN & VISIÓN -->
        <section class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <div
                class="p-8 rounded-2xl border border-white/10 bg-white/5 backdrop-blur"
            >
                <h3
                    class="text-sm uppercase tracking-widest text-blue-500 mb-4"
                >
                    Misión
                </h3>
                <p class="text-lg leading-relaxed text-muted-foreground">
                    Convertir los desafíos de nuestros clientes en soluciones
                    digitales eficientes, escalables y alineadas con sus
                    objetivos estratégicos, aplicando tecnologías modernas y
                    buenas prácticas de ingeniería.
                </p>
            </div>

            <div
                class="p-8 rounded-2xl border border-white/10 bg-white/5 backdrop-blur"
            >
                <h3
                    class="text-sm uppercase tracking-widest text-blue-500 mb-4"
                >
                    Visión
                </h3>
                <p class="text-lg leading-relaxed text-muted-foreground">
                    Ser un referente en desarrollo de software de alto impacto,
                    acompañando a empresas en su transformación digital con
                    soluciones confiables, sólidas y duraderas.
                </p>
            </div>
        </section>

        <!-- OBJETIVOS -->
        <section class="space-y-12">
            <h2 class="text-2xl sm:text-3xl font-bold">
                Objetivos estratégicos
            </h2>

            <ul class="space-y-10 max-w-3xl">
                {
                    objetivos.map((item, index) => (
                        <li class="flex gap-6 items-start">
                            <span class="flex items-center justify-center w-10 h-10 rounded-full border border-blue-500/40 text-blue-500 font-mono text-sm">
                                {String(index + 1).padStart(2, "0")}
                            </span>

                            <div>
                                <h4 class="text-lg font-semibold mb-2">
                                    {item.title}
                                </h4>
                                <p class="text-muted-foreground leading-relaxed">
                                    {item.text}
                                </p>
                            </div>
                        </li>
                    ))
                }
            </ul>
        </section>

        <!-- VALORES -->
        <section class="space-y-12">
            <h2 class="text-2xl sm:text-3xl font-bold">Nuestros valores</h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-16 gap-y-12">
                {
                    valores.map((item) => (
                        <div class="relative pl-6">
                            <span class="absolute left-0 top-1 h-4 w-1 rounded bg-blue-500" />

                            <h4 class="text-lg font-semibold mb-2">
                                {item.title}
                            </h4>
                            <p class="text-muted-foreground leading-relaxed">
                                {item.text}
                            </p>
                        </div>
                    ))
                }
            </div>
        </section>
    </section>
</Layout>
