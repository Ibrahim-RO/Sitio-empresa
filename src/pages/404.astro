---
import NotFoundImg from "../assets/img404.png";
import "../styles/global.css";
import { Picture } from "astro:assets";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Not Found</title>
    </head>
    <body>
        <div
            class="bg-not-found min-h-screen flex flex-col justify-center items-center text-center px-4 gap-6"
        >
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white">
                PÃ¡gina no encontrada
            </h1>

            <Picture
                src={NotFoundImg}
                alt="404 Not Found"
                formats={["avif", "webp"]}
                class="w-full max-w-xs sm:max-w-sm md:max-w-md"
            />

            <a
                href="/"
                class="bg-white text-black px-8 py-4 rounded-full font-semibold
           transition-all duration-300
           hover:bg-black hover:text-white
           shadow-md"
            >
                Regresar al inicio
            </a>
        </div>
    </body>
</html>
