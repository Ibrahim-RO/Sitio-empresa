---
import Logo from "../../assets/DSWHITE.png"

const year = new Date().getFullYear();

const links = {
    empresa: [
        { label: "Nosotros", href: "/about" },
        { label: "Proyectos", href: "/projects" },
        { label: "Contacto", href: "/contact" },
    ],
    legal: [
        { label: "Privacidad", href: "/privacidad" },
        { label: "Términos", href: "/terminos" },
        { label: "Cookies", href: "/cookies" },
    ],
};
---

<footer
    class="relative bg-white dark:bg-zinc-950 border-t border-zinc-200 dark:border-zinc-800"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-16">
        <!-- Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12">
            <!-- Marca -->
            <div class="lg:col-span-2">
                <div class="flex items-center gap-3 mb-4">
                    <img src={Logo.src} class="w-10" alt="Logo DevStack Studio" />
                    <span
                        class="text-xl font-semibold text-zinc-900 dark:text-white"
                    >
                        DevStack Studio
                    </span>
                </div>

                <p class="text-sm text-zinc-600 dark:text-zinc-400 max-w-sm">
                    Creamos soluciones digitales modernas, escalables y
                    enfocadas en resultados. Desarrollo web, software y
                    automatización para empresas.
                </p>
            </div>

            <!-- Producto -->            
            <div>
                <h4
                    class="text-sm font-semibold text-zinc-900 dark:text-white mb-4"
                >
                    Empresa
                </h4>
                <ul class="space-y-3">
                    {
                        links.empresa.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-blue-600 transition"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <div>
                <h4
                    class="text-sm font-semibold text-zinc-900 dark:text-white mb-4"
                >
                    Legal
                </h4>
                <ul class="space-y-3">
                    {
                        links.legal.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-blue-600 transition"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>

        <!-- Divider -->
        <div
            class="mt-16 pt-8 border-t border-zinc-200 dark:border-zinc-800 flex flex-col sm:flex-row items-center justify-between gap-4"
        >
            <p class="text-sm text-zinc-500 dark:text-zinc-400">
                © {year} DevStack Studio. Todos los derechos reservados.
            </p>

            <!-- Social -->
            <div class="flex items-center gap-4">
                <a href="#" aria-label="Twitter" class="social-link">
                    <svg viewBox="0 0 24 24"
                        ><path
                            d="M8 19c7.5 0 11.6-6.2 11.6-11.6v-.5A8.3 8.3 0 0 0 22 4.9a8.2 8.2 0 0 1-2.4.7A4.2 4.2 0 0 0 21.4 3a8.4 8.4 0 0 1-2.7 1A4.2 4.2 0 0 0 11 7.7a11.9 11.9 0 0 1-8.6-4.4A4.2 4.2 0 0 0 3.7 9a4.2 4.2 0 0 1-1.9-.5v.1A4.2 4.2 0 0 0 4.2 13a4.3 4.3 0 0 1-1.9.1 4.2 4.2 0 0 0 3.9 2.9A8.4 8.4 0 0 1 2 18.4 11.9 11.9 0 0 0 8 19z"
                        ></path></svg
                    >
                </a>

                <a href="#" aria-label="GitHub" class="social-link">
                    <svg viewBox="0 0 24 24"
                        ><path
                            d="M12 .5a12 12 0 0 0-3.8 23.4c.6.1.8-.2.8-.5v-2c-3.3.7-4-1.6-4-1.6-.6-1.4-1.4-1.8-1.4-1.8-1.1-.7.1-.7.1-.7 1.2.1 1.8 1.2 1.8 1.2 1.1 1.8 2.9 1.3 3.6 1 .1-.8.4-1.3.7-1.6-2.6-.3-5.3-1.3-5.3-5.8 0-1.3.5-2.4 1.2-3.3-.1-.3-.5-1.5.1-3.2 0 0 1-.3 3.3 1.2a11.4 11.4 0 0 1 6 0c2.3-1.5 3.3-1.2 3.3-1.2.6 1.7.2 2.9.1 3.2.8.9 1.2 2 1.2 3.3 0 4.5-2.7 5.5-5.3 5.8.4.3.8 1 .8 2v3c0 .3.2.6.8.5A12 12 0 0 0 12 .5z"
                        ></path></svg
                    >
                </a>
            </div>
        </div>
    </div>
</footer>

<style>
    .social-link {
        width: 36px;
        height: 36px;
        border-radius: 9999px;
        background: rgb(244 244 245);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }

    .social-link svg {
        width: 18px;
        height: 18px;
        fill: rgb(63 63 70);
    }

    .social-link:hover {
        background: rgb(37 99 235);
    }

    .social-link:hover svg {
        fill: white;
    }

    .dark .social-link {
        background: rgb(39 39 42);
    }

    .dark .social-link svg {
        fill: rgb(161 161 170);
    }
</style>
