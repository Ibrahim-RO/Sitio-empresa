---
import Logo from "../../assets/DSWHITE.png";

const year = new Date().getFullYear();

const links = {
    empresa: [
        { label: "Nosotros", href: "/about" },
        { label: "Proyectos", href: "/projects" },
        { label: "Contacto", href: "/contact" },
    ],
    legal: [
        { label: "Privacidad", href: "/privacidad" },
        { label: "Términos", href: "/terminos" },
        { label: "Cookies", href: "/cookies" },
    ],
};
---

<footer
    class="relative bg-white dark:bg-zinc-950 border-t border-zinc-200 dark:border-zinc-800"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-16">
        <!-- Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12">
            <!-- Marca -->
            <div class="lg:col-span-2">
                <div class="flex items-center gap-3 mb-4">
                    <img
                        src={Logo.src}
                        class="w-10"
                        alt="Logo DevStack Studio"
                    />
                    <span
                        class="text-xl font-semibold text-zinc-900 dark:text-white"
                    >
                        DevStack Studio
                    </span>
                </div>

                <p class="text-sm text-zinc-600 dark:text-zinc-400 max-w-sm">
                    Creamos soluciones digitales modernas, escalables y
                    enfocadas en resultados. Desarrollo web, software y
                    automatización para empresas.
                </p>
            </div>

            <!-- Producto -->
            <div>
                <h4
                    class="text-sm font-semibold text-zinc-900 dark:text-white mb-4"
                >
                    Empresa
                </h4>
                <ul class="space-y-3">
                    {
                        links.empresa.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-blue-600 transition"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <div>
                <h4
                    class="text-sm font-semibold text-zinc-900 dark:text-white mb-4"
                >
                    Legal
                </h4>
                <ul class="space-y-3">
                    {
                        links.legal.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-blue-600 transition"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>

        <!-- Divider -->
        <div
            class="mt-16 pt-8 border-t border-zinc-200 dark:border-zinc-800 flex flex-col sm:flex-row items-center justify-between gap-4"
        >
            <p class="text-sm text-zinc-500 dark:text-zinc-400">
                © {year} DevStack Studio. Todos los derechos reservados.
            </p>

            <!-- Social -->
            <div class="flex items-center gap-4">
                <!-- Instagram -->
                <a href="https://www.instagram.com/dev_stackstudio?igsh=MTB2dzNub2RzNHZqeA==" aria-label="Instagram" class="social-link" target="_blank">
                    <svg viewBox="0 0 24 24">
                        <path
                            d="M7 2C4.2 2 2 4.2 2 7v10c0 2.8 2.2 5 5 5h10c2.8 0 5-2.2 5-5V7c0-2.8-2.2-5-5-5H7zm10 2c1.7 0 3 1.3 3 3v10c0 1.7-1.3 3-3 3H7c-1.7 0-3-1.3-3-3V7c0-1.7 1.3-3 3-3h10zm-5 3a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm0 2a3 3 0 1 1 0 6 3 3 0 0 1 0-6zm4.8-.9a1.1 1.1 0 1 0 0 2.2 1.1 1.1 0 0 0 0-2.2z"
                        ></path>
                    </svg>
                </a>

                <!-- Facebook -->
                <a href="https://www.facebook.com/share/16VZechxPW/" aria-label="Facebook" class="social-link" target="_blank">
                    <svg viewBox="0 0 24 24">
                        <path
                            d="M13.5 9H16V6h-2.5C11.6 6 10 7.6 10 9.5V12H8v3h2v7h3v-7h2.4l.6-3H13v-2.1c0-.5.4-.9.9-.9z"
                        ></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</footer>

<style>
    .social-link {
        width: 36px;
        height: 36px;
        border-radius: 9999px;
        background: rgb(244 244 245);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }

    .social-link svg {
        width: 18px;
        height: 18px;
        fill: rgb(63 63 70);
    }

    .social-link:hover {
        background: rgb(37 99 235);
    }

    .social-link:hover svg {
        fill: white;
    }

    .dark .social-link {
        background: rgb(39 39 42);
    }

    .dark .social-link svg {
        fill: rgb(161 161 170);
    }
</style>
