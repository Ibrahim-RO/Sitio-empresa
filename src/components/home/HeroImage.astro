---
import { Cpu, Globe, Smartphone, Zap, ArrowRight, CheckCircle2, Layers } from 'lucide-react';
import Terminal from "../ui/Terminal.astro";
import DataStreamBackground from './DataStreamBackground';
---

<section
    class="min-h-dvh flex justify-center items-center text-slate-300 selection:bg-blue-500/30 selection:text-white"
>
    <DataStreamBackground client:only="react"/>
    <div class="fixed inset-0 z-0 pointer-events-none">
        <div
            class="absolute top-0 left-0 w-full h-125 bg-linear-to-b from-blue-900/10 to-transparent"
        >
        </div>
        <div
            class="absolute bottom-0 right-0 size-125 bg-purple-900/10 rounded-full blur-[100px]"
        >
        </div>
    </div>

    {/* HERO SECTION */}
    <section
        class="relative overflow-hidden"
    >
        <div
            class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-12 items-center relative z-10"
        >
            <div class="space-y-8">
                <div
                    class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-blue-500/30 bg-blue-500/10 text-blue-400 text-xs font-mono font-bold uppercase tracking-wider mb-2 h-full"
                >
                    <span
                        class="w-2 h-2 rounded-full bg-blue-400 animate-pulse"
                    ></span>
                    Disponible para nuevos retos
                </div>

                <h1
                    class="text-4xl lg:text-6xl font-bold leading-[1.1] text-white"
                >
                    No escribimos código. <br />
                    <span class="text-gradient-primary"
                        >Diseñamos el Futuro.</span
                    >
                </h1>

                <p class="text-lg text-slate-400 max-w-lg leading-relaxed">
                    Agencia de desarrollo de software de alto rendimiento.
                    Transformamos ideas complejas en experiencias digitales
                    escalables, rápidas y visualmente impactantes.
                </p>

                <div class="flex flex-col sm:flex-row gap-4 pt-2">
                    <button                        
                        class="group px-8 py-4 rounded-full bg-blue-400 text-white font-bold transition-all hover:bg-blue-500 hover:shadow-[0_0_30px_rgba(59,130,246,0.5)] flex items-center justify-center gap-2"
                    >
                        Agendar Consultoría
                        <ArrowRight
                            size={18}
                            className="group-hover:translate-x-1 transition-transform"
                        />
                    </button>

                    <a
                        href="#projects"
                        class="px-8 py-4 rounded-full border border-slate-700 text-white font-semibold hover:bg-slate-800 transition-all flex items-center justify-center gap-2"
                    >
                        <Layers size={18} /> Ver Proyectos
                    </a>
                </div>

                <div
                    class="flex items-center gap-6 pt-4 text-sm text-slate-500 font-mono"
                >
                    <span class="flex items-center gap-2"
                        ><CheckCircle2 size={14} className="text-blue-500" /> React
                        / Next.js</span
                    >
                    <span class="flex items-center gap-2"
                        ><CheckCircle2 size={14} className="text-blue-500" /> Cloud
                        Native</span
                    >
                    <span class="flex items-center gap-2"
                        ><CheckCircle2 size={14} className="text-blue-500" /> Mobile
                        First</span
                    >
                </div>
            </div>

            <div class="relative flex justify-center lg:justify-end">
                <div
                    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-tr from-blue-600/20 to-purple-600/20 rounded-full blur-[80px] -z-10"
                >
                </div>
                <Terminal />
            </div>
        </div>
    </section>
</section>
