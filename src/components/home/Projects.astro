---
import { projects } from "../../data/projects";
import ProjectCard from "../projects/ProjectCard.astro";

const projectsData = projects.slice(0, 3);
---

<section class="space-y-10 py-16 text-white px-5 lg:px-0">
    <!-- Header -->
    <article class="text-center max-w-3xl mx-auto mb-20">
        <h3 data-aos="fade-up" class="text-4xl md:text-5xl font-bold mb-6">
            Proyectos Destacados
        </h3>

        <p
            data-aos="fade-up"
            data-aos-delay="100"
            class="text-lg md:text-xl text-slate-300"
        >
            Experiencias digitales diseñadas para destacar marcas, optimizar
            procesos y generar resultados reales.
        </p>
    </article>

    <!-- Grid -->
    <article class="w-full px-5 lg:px-0">
        <section
            class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-16"
        >
            {
                projectsData.map((project, index) => (
                    <div
                        data-aos="fade-up"
                        data-aos-duration="800"
                        data-aos-delay={index * 150}
                    >
                        <ProjectCard
                            title={project.title}
                            description={project.description}
                            image={project.image}
                            technologies={project.technologies}
                        />
                    </div>
                ))
            }
        </section>
    </article>

    <!-- CTA -->
    <div data-aos="fade-up" data-aos-delay="500" class="text-center">
        <a
            href="/projects"
            class="group relative inline-flex items-center gap-2
           px-6 py-3 text-blue-300 font-medium text-sm rounded-full border
           border-blue-400/30 transition-all duration-300 hover:border-blue-400
           hover:bg-blue-500/10"
        >
            <span>Ver más</span>

            <svg
                class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 5l7 7-7 7"></path>
            </svg>

            <span
                class="absolute inset-0 rounded-full
             shadow-[0_0_20px_rgba(59,130,246,0.35)]
             opacity-0 group-hover:opacity-100 transition-opacity"
            ></span>
        </a>
    </div>
</section>
