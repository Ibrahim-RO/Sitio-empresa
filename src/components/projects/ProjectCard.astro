---
import { Picture } from "astro:assets";

interface Technology {
    name: string;
}

interface Props {
    title: string;
    description: string;
    image: ImageMetadata;
    technologies: Technology[];
}

const { title, description, image, technologies } = Astro.props;
---

<article
    class="group relative overflow-hidden rounded-2xl bg-slate-900/80 border border-white/10 backdrop-blur-xl shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl hover:border-blue-500/40"
>
    <!-- Imagen -->
    <div class="relative overflow-hidden">
        <Picture
            src={image}
            alt={`Proyecto ${title}`}
            formats={["avif", "webp"]}
            class="w-full h-56 object-cover object-top transition-transform duration-500 group-hover:scale-105"
        />
    </div>

    <!-- Contenido -->
    <div class="relative p-6 flex flex-col h-full">
        <h3
            class="text-lg font-bold text-white mb-2 transition-colors group-hover:text-blue-400"
        >
            {title}
        </h3>

        <p class="text-sm text-slate-400 leading-relaxed mb-4">
            {description}
        </p>

        <!-- TecnologÃ­as -->
        <div class="mt-auto flex flex-wrap gap-2">
            {
                technologies.map((tech) => (
                    <span class="px-3 py-1 rounded-full bg-blue-500/10 text-blue-400 text-xs font-mono border border-blue-500/20 transition-colors group-hover:bg-blue-500/20">
                        {tech.name}
                    </span>
                ))
            }
        </div>
    </div>
</article>
